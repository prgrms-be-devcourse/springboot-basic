<configuration>

    <property name="CONSOLE_LOG_PATTERN" value="%green(%d{HH:mm:ss.SSS})} [%thread] %highlight(%-5level) %cyan(%logger{36}) -%kvp- %yellow(%msg%n)" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>